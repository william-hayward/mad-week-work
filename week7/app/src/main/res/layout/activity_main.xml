<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18pt"
        android:id="@+id/tv1"
        android:text="@string/id"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/etSongId"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:id="@+id/etSongId"
        app:layout_constraintLeft_toRightOf="@+id/tv1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18pt"
        android:id="@+id/tv2"
        android:text="@string/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/etSongTitle"
        app:layout_constraintTop_toBottomOf="@+id/tv1"
        />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:id="@+id/etSongTitle"
        app:layout_constraintLeft_toRightOf="@+id/tv2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSongId"
        />


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18pt"
        android:id="@+id/tv3"
        android:text="@string/artist"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/etSongArtist"
        app:layout_constraintTop_toBottomOf="@+id/tv2"
        />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:id="@+id/etSongArtist"
        app:layout_constraintLeft_toRightOf="@+id/tv3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSongTitle"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18pt"
        android:id="@+id/tv4"
        android:text="@string/year"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/etSongYear"
        app:layout_constraintTop_toBottomOf="@+id/tv3"
        />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:id="@+id/etSongYear"
        app:layout_constraintLeft_toRightOf="@+id/tv4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSongArtist"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnSearch"
        android:text="@string/btn1"
        android:layout_marginHorizontal="2px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etSongYear"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnAdd"
        android:text="@string/btnAdd"
        android:layout_marginHorizontal="2px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSearch"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnUpdate"
        android:text="@string/btnUpdate"
        android:layout_marginHorizontal="2px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAdd"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnDelete"
        android:text="@string/btnDelete"
        android:layout_marginHorizontal="2px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnUpdate"
        />

</androidx.constraintlayout.widget.ConstraintLayout>